{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "es2022",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
