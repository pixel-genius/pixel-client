{
  "name": "turborepo-shadcn-ui",
  "version": "1.3.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "turbo build",
    "type-checks": "turbo build check-types",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ui:add": "bun --filter @repo/ui ui:add"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.3.2",
    "turbo": "2.0.6"
  },
  "packageManager": "bun@1.1.29",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
